import { motion } from 'framer-motion'
import { useEffect, useState } from 'react'

const VoiceOrb = ({ isActive, isListening, isRecording, isSpeaking, wakeWordDetected }) => {
  const [audioLevel, setAudioLevel] = useState(0)

  useEffect(() => {
    if (isActive) {
      // Simulate audio level changes
      const interval = setInterval(() => {
        setAudioLevel(Math.random() * 0.5 + 0.5)
      }, 100)
      return () => clearInterval(interval)
    } else {
      setAudioLevel(0)
    }
  }, [isActive])

  const orbSize = 200 + (isActive ? audioLevel * 50 : 0)
  const glowSize = orbSize + 40
  
  // Determine orb color based on state
  let orbColor = 'from-indigo-400 to-purple-500' // idle
  if (wakeWordDetected) {
    orbColor = 'from-yellow-400 to-orange-500' // wake word detected
  } else if (isRecording) {
    orbColor = 'from-blue-400 to-blue-600' // recording
  } else if (isSpeaking) {
    orbColor = 'from-purple-400 to-purple-600' // speaking
  } else if (isListening) {
    orbColor = 'from-green-400 to-green-600' // listening for wake word
  }

  return (
    <div className="relative">
      {/* Outer glow rings */}
      {isActive && (
        <>
          <motion.div
            className="absolute inset-0 rounded-full"
            style={{
              background: isListening
                ? 'radial-gradient(circle, rgba(59, 130, 246, 0.4) 0%, rgba(59, 130, 246, 0) 70%)'
                : 'radial-gradient(circle, rgba(168, 85, 247, 0.4) 0%, rgba(168, 85, 247, 0) 70%)',
            }}
            animate={{
              scale: [1, 1.2, 1],
              opacity: [0.6, 0.3, 0.6],
            }}
            transition={{
              duration: 2,
              repeat: Infinity,
              ease: 'easeInOut',
            }}
          />
          <motion.div
            className="absolute inset-0 rounded-full"
            style={{
              background: isListening
                ? 'radial-gradient(circle, rgba(59, 130, 246, 0.3) 0%, rgba(59, 130, 246, 0) 70%)'
                : 'radial-gradient(circle, rgba(168, 85, 247, 0.3) 0%, rgba(168, 85, 247, 0) 70%)',
            }}
            animate={{
              scale: [1, 1.4, 1],
              opacity: [0.4, 0.1, 0.4],
            }}
            transition={{
              duration: 2.5,
              repeat: Infinity,
              ease: 'easeInOut',
              delay: 0.3,
            }}
          />
        </>
      )}

      {/* Main orb */}
      <motion.div
        className={`
          relative rounded-full
          flex items-center justify-center
          transition-all duration-300
          bg-gradient-to-br ${orbColor}
        `}
        style={{
          width: orbSize,
          height: orbSize,
          boxShadow: isActive
            ? `0 0 ${glowSize}px ${
                wakeWordDetected ? 'rgba(251, 191, 36, 0.6)' :
                isRecording ? 'rgba(59, 130, 246, 0.6)' : 
                isSpeaking ? 'rgba(168, 85, 247, 0.6)' :
                isListening ? 'rgba(34, 197, 94, 0.6)' :
                'rgba(99, 102, 241, 0.5)'
              }`
            : '0 0 40px rgba(99, 102, 241, 0.5)',
        }}
        animate={{
          scale: isActive ? [1, 1.05, 1] : 1,
        }}
        transition={{
          duration: 0.8,
          repeat: isActive ? Infinity : 0,
          ease: 'easeInOut',
        }}
      >
        {/* Inner circle */}
        <motion.div
          className="absolute inset-4 rounded-full bg-white/20 backdrop-blur-sm"
          animate={{
            scale: isActive ? [1, 1.1, 1] : 1,
          }}
          transition={{
            duration: 1,
            repeat: isActive ? Infinity : 0,
            ease: 'easeInOut',
          }}
        />

        {/* Icon */}
        <div className="relative z-10 text-white">
          {/* Wake word detected - Star icon */}
          {wakeWordDetected && (
            <motion.svg
              xmlns="http://www.w3.org/2000/svg"
              className="h-20 w-20"
              fill="currentColor"
              viewBox="0 0 24 24"
              animate={{ rotate: 360, scale: [1, 1.3, 1] }}
              transition={{ duration: 0.6 }}
            >
              <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z" />
            </motion.svg>
          )}
          
          {/* Listening for wake word - Ear icon */}
          {isListening && !isRecording && !wakeWordDetected && (
            <motion.svg
              xmlns="http://www.w3.org/2000/svg"
              className="h-20 w-20"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              animate={{ scale: [1, 1.1, 1] }}
              transition={{ duration: 2, repeat: Infinity }}
            >
              <path
                strokeLinecap="round"
                strokeLinejoin="round"
                strokeWidth={2}
                d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3"
              />
            </motion.svg>
          )}
          
          {/* Recording question - Mic icon */}
          {isRecording && (
            <motion.svg
              xmlns="http://www.w3.org/2000/svg"
              className="h-20 w-20"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              animate={{ scale: [1, 1.2, 1] }}
              transition={{ duration: 1, repeat: Infinity }}
            >
              <path
                strokeLinecap="round"
                strokeLinejoin="round"
                strokeWidth={2}
                d="M19 11a7 7 0 01-7 7m0 0a7 7 0 01-7-7m7 7v4m0 0H8m4 0h4m-4-8a3 3 0 01-3-3V5a3 3 0 116 0v6a3 3 0 01-3 3z"
              />
            </motion.svg>
          )}
          
          {/* Speaking - Waveform */}
          {isSpeaking && !isRecording && !isListening && (
            <motion.div className="flex space-x-1 items-end h-20">
              {[...Array(5)].map((_, i) => (
                <motion.div
                  key={i}
                  className="w-3 bg-white rounded-full"
                  animate={{
                    height: [20, 60, 20],
                  }}
                  transition={{
                    duration: 0.8,
                    repeat: Infinity,
                    ease: 'easeInOut',
                    delay: i * 0.1,
                  }}
                />
              ))}
            </motion.div>
          )}
          {/* Idle - Sleep icon */}
          {!isActive && (
            <svg
              xmlns="http://www.w3.org/2000/svg"
              className="h-20 w-20"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                strokeLinecap="round"
                strokeLinejoin="round"
                strokeWidth={2}
                d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"
              />
            </svg>
          )}
        </div>
      </motion.div>

      {/* Waveform visualization around orb */}
      {isActive && (
        <div className="absolute inset-0 flex items-center justify-center pointer-events-none">
          {[...Array(12)].map((_, i) => (
            <motion.div
              key={i}
              className="absolute w-1 bg-white/50 rounded-full"
              style={{
                transform: `rotate(${i * 30}deg) translateY(-${orbSize / 2 + 20}px)`,
              }}
              animate={{
                height: [10, 30 * audioLevel, 10],
                opacity: [0.3, 0.8, 0.3],
              }}
              transition={{
                duration: 0.5,
                repeat: Infinity,
                ease: 'easeInOut',
                delay: i * 0.05,
              }}
            />
          ))}
        </div>
      )}
    </div>
  )
}

export default VoiceOrb
